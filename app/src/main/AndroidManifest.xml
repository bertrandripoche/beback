<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.depuisletemps.beback">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.depuisletemps.beback.ui.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.depuisletemps.beback.ui.view.LoanActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.depuisletemps.beback.ui.view.AddLoanActivity"
                android:parentActivityName="com.depuisletemps.beback.ui.view.LoanActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.depuisletemps.beback.ui.view.LoanActivity" />
        </activity>
        <activity
                android:name="com.depuisletemps.beback.ui.view.LoanPagerActivity"
                android:parentActivityName="com.depuisletemps.beback.ui.view.LoginActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.depuisletemps.beback.ui.view.LoginActivity" />
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>