<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:orientation="vertical">

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
            android:id="@+id/es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentView="@+id/content"
            app:leftMenuView="@+id/left"
            app:rightMenuView="@+id/right">

        <LinearLayout
                android:id="@+id/left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/red"
                android:orientation="horizontal"
                android:padding="10dp">

            <ImageView
                    android:id="@+id/item_menu_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:src="@drawable/ic_item_delete"
                    android:clickable="true"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:background="@color/primaryLightColor"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_product_category"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_borrowing"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:id="@+id/item_product"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/title_size_small"
                    android:paddingEnd="@dimen/middle"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/middle"
                    app:layout_constraintLeft_toRightOf="@+id/item_product_category"
                    app:layout_constraintRight_toLeftOf="@+id/guideline_vertical_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_due_date_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    android:src="@drawable/ic_due_date"
                    app:layout_constraintLeft_toRightOf="@+id/guideline_vertical_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            <TextView
                    android:id="@+id/item_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_max"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/item_due_date_pic"
                    />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_loan_type"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_borrowing"
                    app:layout_constraintLeft_toRightOf="@+id/guideline_vertical_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <TextView
                    android:id="@+id/item_recipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_max"
                    android:paddingEnd="@dimen/basic"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:textColor="@color/red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/item_loan_type"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical_center"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical_right"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/right"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/item_menu_archive"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/secondaryLightColor"
                    android:src="@drawable/ic_item_archive"
                    android:clickable="true"
                    android:padding="10dp"/>

            <ImageView
                    android:id="@+id/item_menu_edit"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/primaryDarkColor"
                    android:clickable="true"
                    android:src="@drawable/ic_item_edit"
                    android:padding="10dp"/>

        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
</LinearLayout>