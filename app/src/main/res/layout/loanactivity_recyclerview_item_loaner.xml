<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_loan_recycler_layout"
        android:background="@color/primaryLightColor"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <TextView
            android:id="@+id/item_loaner_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_size_small"
            android:paddingEnd="@dimen/middle"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="@dimen/middle"
            android:text="FJKSD"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_lending_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/ic_loan"
            app:layout_constraintLeft_toRightOf="@+id/guideline_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_lending_icon"
            />

    <TextView
            android:id="@+id/item_lending_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginEnd="@dimen/default_margin"
            android:text="0"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/item_lending_icon"
            app:layout_constraintBottom_toBottomOf="@id/item_lending_icon"
            app:layout_constraintLeft_toRightOf="@+id/item_lending_icon"
            />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_borrowing_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_borrowing"
            app:layout_constraintLeft_toRightOf="@+id/guideline_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_lending_icon"
            />

    <TextView
            android:id="@+id/item_borrowing_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:paddingEnd="@dimen/basic"
            android:gravity="center_vertical"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/item_borrowing_icon"
            app:layout_constraintTop_toTopOf="@+id/item_borrowing_icon"
            app:layout_constraintLeft_toRightOf="@+id/item_borrowing_icon"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65"/>

</androidx.constraintlayout.widget.ConstraintLayout>
