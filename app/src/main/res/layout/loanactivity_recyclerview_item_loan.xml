<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_loan_recycler_layout"
        android:background="@color/primaryLightColor"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_product_category"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_borrowing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/item_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_size_small"
            android:paddingEnd="@dimen/middle"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Corde à sauter"
            android:textColor="@color/black"
            android:paddingStart="@dimen/middle"
            app:layout_constraintBottom_toTopOf="@+id/item_to_from"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_to_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size"
            android:textStyle="italic"
            android:paddingEnd="@dimen/basic"
            android:text="Emprunté à"
            android:textColor="@color/red"
            app:layout_constraintRight_toLeftOf="@+id/item_recipient"
            app:layout_constraintTop_toBottomOf="@id/item_product"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/item_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size"
                android:textStyle="italic"
                android:text="Jean-Pierre"
                android:textColor="@color/red"
                app:layout_constraintRight_toLeftOf="@+id/item_loan_type"
                app:layout_constraintTop_toBottomOf="@id/item_product"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_loan_type"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_borrowing"
                android:layout_margin="@dimen/middle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_product"
                app:layout_constraintRight_toLeftOf="@id/item_return_date"/>



    <TextView
            android:id="@+id/item_return_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/basic"
            android:textSize="@dimen/text_size"
            android:text="Retour\n26/03/20"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/default_margin"
            android:textColor="@color/red"
            app:layout_constraintRight_toRightOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
